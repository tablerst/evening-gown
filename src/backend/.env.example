# Application
APP_HOST=0.0.0.0
APP_PORT=8080

# PostgreSQL connection string (set to empty to disable Postgres during development)
POSTGRES_DSN=postgres://postgres:postgres@localhost:5432/app?sslmode=disable
POSTGRES_MAX_CONNS=10
POSTGRES_MIN_CONNS=2
POSTGRES_MAX_CONN_LIFETIME=1h

# Redis settings (set REDIS_ADDR empty to disable Redis)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5s
